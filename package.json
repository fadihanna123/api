  "scripts": {
    "dev": "ts-node-dev --poll -r tsconfig-paths/register ./src/app",
    "start": "node build/app.js",
    "format": "prettier ./ -w",
    "format:check": "prettier ./ --check",
    "setup": "yarn --emoji --ignore-scripts --immutable --silent",
    "prepare": "husky",
    "build": "yarn type-check && tsc --outDir ./build && tsc-alias",
    "preview": "yarn build && node ./build/app",
    "lint": "eslint && yarn type-check",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "ci": "yarn build && yarn lint && yarn test",
    "archive": "yarn pack --filename api-v${npm_package_version}.zip",
    "clear": "rimraf ./node_modules ./dist ./build"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
