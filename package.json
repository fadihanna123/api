  "scripts": {
    "dev": "ts-node-dev --poll -r tsconfig-paths/register src/app",
    "format": "prettier . -w",
    "setup": "yarn --emoji --ignore-scripts",
    "clear": "rm -rf node_modules dist",
    "prepare": "husky",
